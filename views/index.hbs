
<div class="title">图书管理系统 <a href="/toAddBook">添加图书</a></div>
<div class="content">
    <table cellpadding="0" cellspacing="0">
        <thead>
        <tr>
            <th>编号</th>
            <th>名称</th>
            <th>作者</th>
            <th>分类</th>
            <th>描述</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        {{#each list}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.author}}</td>
                <td>{{this.category}}</td>
                <td>{{this.description}}</td>
                <td><a href="/toEditBook?id={{this.id}}">修改</a> | <a href="/delBook?id={{this.id}}">删除</a></td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
